{# Détail d'un projet #}

{% extends 'base.html.twig' %}

{% block title %}
    - TaskLinker
{% endblock %}

{% block header %}
    <div class="flex-header">
        <h1>{{ project.name }}</h1>
        <div class="user-list">
            {% for user in project.users %}
                <div class="avatar">
                    {{ user.firstname|first }}{{ user.lastname|first }}
                </div>
            {% endfor %}
        </div>
        <a class="button" href="#">Modifier</a>
    </div>
{% endblock %}

{% block body %}
    <div id="content">
        <div id="tasks-container">
            <div class="task-column">
                <h2>To Do</h2>
                {% for task in project.tasks %}
                    {% if task.status.name == 'To Do' %}
                        <div class="tasks-list">
                            <a class="task" href="tache.html">
                                <h3>{{ task.title }}</h3>
                                <p>
                                    {{ task.description }}
                                </p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>
                                        {# {{ task.deadline|format_datetime }} #} deadline
                                    </div>
                                    <div class="mini-user">{{ task.users.firstname|first }}{{ task.users.lastname|first }}</div>
                                </div>
                            </a>
                            
                        </div>
                    {% endif %}
                {% endfor %}
                <a href="tache-add.html" class="task-add">
                    + Ajouter une tâche
                </a>
            </div>
            <div class="task-column">
                <h2>Doing</h2>
                {% for task in project.tasks %}
                    {% if task.status.name == 'Doing' %}
                        <div class="tasks-list">
                            <a class="task" href="tache.html">
                                <h3>{{ task.title }}</h3>
                                <p>
                                    {{ task.description }}
                                </p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>
                                        {# {{ task.deadline|format_datetime }} #} deadline
                                    </div>
                                    <div class="mini-user">{{ task.users.firstname|first }}{{ task.users.lastname|first }}</div>
                                </div>
                            </a>
                            
                        </div>
                    {% endif %}
                {% endfor %}
                <a href="tache-add.html" class="task-add">
                    + Ajouter une tâche
                </a>
            </div>
            <div class="task-column">
                <h2>Done</h2>
                {% for task in project.tasks %}
                    {% if task.status.name == 'Done' %}
                        <div class="tasks-list">
                            <a class="task" href="tache.html">
                                <h3>{{ task.title }}</h3>
                                <p>
                                    {{ task.description }}
                                </p>
                                <div class="task-infos">
                                    <div class="task-deadline">
                                        <i class="fa-regular fa-calendar"></i>
                                        {# {{ task.deadline|format_datetime }} #} deadline
                                    </div>
                                    <div class="mini-user">{{ task.users.firstname|first }}{{ task.users.lastname|first }}</div>
                                </div>
                            </a>
                            
                        </div>
                    {% endif %}
                {% endfor %}
                <a href="tache-add.html" class="task-add">
                    + Ajouter une tâche
                </a>
            </div>
        </div>
    </div>
{% endblock %}